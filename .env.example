# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/training_platform
MONGODB_DB_NAME=training_platform

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_make_it_long_and_secure
JWT_EXPIRATION=86400000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
API_PORT=8080

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,mp4,mp3,jpg,png

# AI Service Configuration (Optional - for enhanced features)
OPENAI_API_KEY=your_openai_api_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Analytics Configuration (Optional)
ANALYTICS_ENABLED=true
MIXPANEL_TOKEN=your_mixpanel_token

# Security Configuration
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_here

# Live Streaming Configuration (Optional)
STREAMING_SERVER_URL=ws://localhost:8081
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug